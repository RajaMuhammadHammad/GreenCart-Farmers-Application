@{
    ViewBag.Title = "BuyerDashboard";
}

<div class="dashboard-container">
    <div class="header-section">
        <h1 class="dashboard-title">Buyer Dashboard</h1>
        <p class="welcome-message">Welcome back, <span class="username">@User.Identity.Name</span>!</p>
    </div>

    <div class="dashboard-grid">
        <div class="nav-card">
            <div class="card-icon">🛍️</div>
            <h3>@Html.ActionLink("Browse Products", "Index", "BuyerProducts")</h3>
            <p>Explore our wide range of fresh products</p>
        </div>

        <div class="nav-card">
            <div class="card-icon">📦</div>
            <h3>@Html.ActionLink("Place Orders", "Create", "BuyerOrder")</h3>
            <p>Create new orders for your favorite items</p>
        </div>

        <div class="nav-card">
            <div class="card-icon">🚚</div>
            <h3>
                @Html.ActionLink(
                    "Delivery Status",
                    "Index",
                    "BuyerDeliveries",
                    new { username = User.Identity.Name },
                    null
                )
            </h3>
            <p>Track your orders and delivery status</p>
        </div>

        <div class="nav-card">
            <div class="card-icon">⭐</div>
            <h3>@Html.ActionLink("Add Reviews", "Index", "Reviews")</h3>
            <p>Share your experience and rate products</p>
        </div>

        <div class="nav-card">
            <div class="card-icon">👤</div>
            <h3>@Html.ActionLink("Edit Profile", "Index", "Users")</h3>
            <p>Update your personal information</p>
        </div>

        <div class="nav-card logout-card">
            <div class="card-icon">🚪</div>
            <h3>@Html.ActionLink("Logout", "Logout", "Auth")</h3>
            <p>Sign out of your account</p>
        </div>
    </div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 20px;
    }

    .dashboard-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .header-section {
        text-align: center;
        margin-bottom: 50px;
        color: white;
    }

    .dashboard-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 15px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .welcome-message {
        font-size: 1.3rem;
        opacity: 0.9;
        font-weight: 300;
    }

    .username {
        font-weight: 600;
        color: #ffd700;
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 25px;
        margin-top: 40px;
    }

    .nav-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .nav-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.3);
        background: rgba(255, 255, 255, 1);
    }

    .card-icon {
        font-size: 3rem;
        margin-bottom: 20px;
        filter: drop-shadow(2px 2px 4px rgba(0,0,0,0.1));
    }

    .nav-card h3 {
        margin-bottom: 15px;
        font-size: 1.3rem;
        color: #2c3e50;
    }

    .nav-card h3 a {
        text-decoration: none;
        color: #2c3e50;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .nav-card:hover h3 a {
        color: #3498db;
    }

    .nav-card p {
        color: #7f8c8d;
        font-size: 0.95rem;
        line-height: 1.5;
    }

    .logout-card {
        background: rgba(231, 76, 60, 0.1);
        border: 1px solid rgba(231, 76, 60, 0.2);
    }

    .logout-card:hover {
        background: rgba(231, 76, 60, 0.15);
        transform: translateY(-10px);
    }

    .logout-card h3 a {
        color: #e74c3c;
    }

    .logout-card:hover h3 a {
        color: #c0392b;
    }

    @@media (max-width: 768px) {
        .dashboard-title {
            font-size: 2.2rem;
        }

        .welcome-message {
            font-size: 1.1rem;
        }

        .dashboard-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .nav-card {
            padding: 25px;
        }
    }
</style>