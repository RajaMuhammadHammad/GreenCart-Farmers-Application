@model GreenCartFarmers.WebApp.User
@{
    ViewBag.Title = "Delete User";
}

<style>
    .page-container {
        max-width: 700px;
        margin: 0 auto;
        padding: 2rem;
    }

    .page-header {
        background: linear-gradient(135deg, #dc3545 0%, #e83e8c 100%);
        color: white;
        padding: 2rem;
        margin-bottom: 2rem;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .page-header h2 {
        margin: 0 0 0.5rem 0;
        font-size: 2.2rem;
        font-weight: 300;
    }

    .warning-message {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    .delete-container {
        background: white;
        padding: 2.5rem;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        margin-bottom: 2rem;
        border: 3px solid #ffe6e6;
    }

    .delete-warning {
        background: linear-gradient(135deg, #fff5f5, #ffe6e6);
        padding: 1.5rem;
        border-radius: 15px;
        border-left: 5px solid #dc3545;
        margin-bottom: 2rem;
        text-align: center;
    }

    .delete-warning-icon {
        font-size: 3rem;
        color: #dc3545;
        margin-bottom: 1rem;
    }

    .delete-warning h4 {
        color: #721c24;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .delete-warning p {
        color: #856404;
        margin: 0;
        font-size: 1.1rem;
    }

    .user-preview {
        background: #f8f9fa;
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        border: 2px dashed #dee2e6;
    }

    .user-preview h4 {
        color: #2c3e50;
        margin-bottom: 1.5rem;
        text-align: center;
        font-weight: 600;
    }

    .user-info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        padding: 1rem;
        background: white;
        border-radius: 10px;
        border-left: 4px solid #dc3545;
    }

    .info-label {
        color: #6c757d;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }

    .info-value {
        color: #2c3e50;
        font-weight: 500;
        word-break: break-all;
    }

    .user-role-badge {
        background: linear-gradient(45deg, #dc3545, #e83e8c);
        color: white;
        padding: 4px 12px;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 500;
        display: inline-block;
        align-self: flex-start;
    }

    .date-value {
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        background: #e9ecef;
        padding: 4px 8px;
        border-radius: 5px;
        display: inline-block;
    }

    .action-section {
        background: linear-gradient(135deg, #fff5f5, #ffe6e6);
        padding: 2rem;
        border-radius: 15px;
        text-align: center;
        border: 1px solid #f8d7da;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 1.5rem;
        flex-wrap: wrap;
    }

    .btn-delete {
        background: linear-gradient(45deg, #dc3545, #e83e8c);
        color: white;
        padding: 14px 30px;
        border: none;
        border-radius: 25px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
        min-width: 150px;
    }

    .btn-delete:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(220, 53, 69, 0.4);
    }

    .btn-cancel {
        background: linear-gradient(45deg, #6c757d, #495057);
        color: white;
        padding: 14px 30px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
        min-width: 150px;
        display: inline-block;
        text-align: center;
    }

    .btn-cancel:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(108, 117, 125, 0.4);
        color: white;
        text-decoration: none;
    }

    .consequence-list {
        background: #fff3cd;
        padding: 1.5rem;
        border-radius: 10px;
        margin-bottom: 1.5rem;
        border-left: 4px solid #ffc107;
    }

    .consequence-list h5 {
        color: #856404;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .consequence-list ul {
        color: #856404;
        margin: 0;
        padding-left: 1.5rem;
    }

    .consequence-list li {
        margin-bottom: 0.5rem;
    }

    @@media (max-width: 768px) {
        .page-container {
            padding: 1rem;
        }

        .delete-container {
            padding: 1.5rem;
        }

        .user-info-grid {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
            align-items: center;
        }

        .btn-delete,
        .btn-cancel {
            width: 100%;
            max-width: 300px;
        }
    }
</style>

<div class="page-container">
    <div class="page-header">
        <h2>⚠️ Delete User</h2>
        <p class="warning-message">This action cannot be undone!</p>
    </div>

    <div class="delete-container">
        <div class="delete-warning">
            <div class="delete-warning-icon">🗑️</div>
            <h4>Are you sure you want to delete this user?</h4>
            <p>This will permanently remove the user from the system.</p>
        </div>

        <div class="user-preview">
            <h4>User to be Deleted</h4>

            <div class="user-info-grid">
                <div class="info-item">
                    <div class="info-label">Username</div>
                    <div class="info-value">@Html.DisplayFor(model => model.UserName)</div>
                </div>

                <div class="info-item">
                    <div class="info-label">Email</div>
                    <div class="info-value">@Html.DisplayFor(model => model.Email)</div>
                </div>

                <div class="info-item">
                    <div class="info-label">Role</div>
                    <div class="info-value">
                        <span class="user-role-badge">@Html.DisplayFor(model => model.Role)</span>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-label">Password Hash</div>
                    <div class="info-value" style="font-family: monospace; font-size: 0.7rem;">
                        @Html.DisplayFor(model => model.PasswordHash)
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-label">Created At</div>
                    <div class="info-value">
                        <span class="date-value">@Html.DisplayFor(model => model.CreatedAt)</span>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-label">Updated At</div>
                    <div class="info-value">
                        <span class="date-value">@Html.DisplayFor(model => model.UpdatedAt)</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="consequence-list">
            <h5>⚠️ What will happen when you delete this user:</h5>
            <ul>
                <li>All user data will be permanently removed</li>
                <li>Any associated orders or transactions may be affected</li>
                <li>User login access will be immediately revoked</li>
                <li>This action cannot be reversed</li>
            </ul>
        </div>

        <div class="action-section">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="action-buttons">
                    <input type="submit" value="🗑️ Delete User" class="btn-delete" onclick="return confirm('Are you absolutely sure? This cannot be undone!');" />
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn-cancel" })
                </div>
            }
        </div>
    </div>
</div>