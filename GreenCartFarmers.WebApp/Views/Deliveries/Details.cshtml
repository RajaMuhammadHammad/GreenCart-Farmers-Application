@model GreenCartFarmers.WebApp.Delivery

@{
    ViewBag.Title = "Delivery Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .details-card {
        max-width: 600px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        background-color: #fff;
        animation: fadeInUp 0.5s ease forwards;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    dt {
        font-weight: 600;
        width: 180px;
        float: left;
        clear: left;
    }

    dd {
        margin-left: 190px;
        margin-bottom: 15px;
    }

    .btn-group {
        margin-top: 20px;
    }
</style>

<div class="details-card">
    <h2 class="mb-4 text-primary">Delivery Details</h2>
    <dl>
        <dt>@Html.DisplayNameFor(model => model.Order.Status)</dt>
        <dd>@Html.DisplayFor(model => model.Order.Status)</dd>

        <dt>@Html.DisplayNameFor(model => model.DeliveryDate)</dt>
        <dd>@Html.DisplayFor(model => model.DeliveryDate)</dd>

        <dt>@Html.DisplayNameFor(model => model.DeliveryStatus)</dt>
        <dd>@Html.DisplayFor(model => model.DeliveryStatus)</dd>
    </dl>

    <div class="btn-group">
        @Html.ActionLink("Edit", "Edit", new { id = Model.DeliveryId }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ms-2" })
    </div>
</div>
