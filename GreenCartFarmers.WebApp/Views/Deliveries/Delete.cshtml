@model GreenCartFarmers.WebApp.Delivery

@{
    ViewBag.Title = "Delete Delivery";
}

<!-- Bootstrap CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- Custom Styling -->
<style>
    .delete-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
        animation: fadeSlideIn 0.5s ease-in-out;
    }

    @@keyframes fadeSlideIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .delete-title {
        font-size: 1.6rem;
        font-weight: 600;
        color: #dc3545;
    }

    .dl-horizontal dt {
        float: left;
        width: 180px;
        font-weight: 500;
        clear: left;
    }

    .dl-horizontal dd {
        margin-left: 200px;
        margin-bottom: 10px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #bb2d3b;
    }

    .btn-outline-secondary {
        margin-left: 10px;
    }
</style>

<div class="container">
    <div class="delete-container">
        <h2 class="delete-title">⚠️ Confirm Delete</h2>
        <p class="text-muted mb-4">Are you sure you want to delete this delivery record?</p>

        <dl class="dl-horizontal">
            <dt>Order Status</dt>
            <dd>@Html.DisplayFor(model => model.Order.Status)</dd>

            <dt>Delivery Date</dt>
            <dd>@Html.DisplayFor(model => model.DeliveryDate)</dd>

            <dt>Delivery Status</dt>
            <dd>@Html.DisplayFor(model => model.DeliveryStatus)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group mt-4">
                <input type="submit" value="🗑️ Delete" class="btn btn-danger" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-secondary" })
            </div>
        }
    </div>
</div>
