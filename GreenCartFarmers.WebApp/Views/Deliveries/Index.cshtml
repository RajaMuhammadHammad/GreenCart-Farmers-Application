@model IEnumerable<GreenCartFarmers.WebApp.Delivery>

@{
    ViewBag.Title = "Delivery List";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .table-container {
        max-width: 900px;
        margin: 40px auto;
        background: #fff;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        animation: fadeInDown 0.6s ease forwards;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    table.table thead th {
        background-color: #0d6efd;
        color: white;
        font-weight: 600;
        text-align: center;
    }

    table.table tbody tr:hover {
        background-color: #f2f9ff;
        transition: background-color 0.3s ease;
    }

    table.table tbody td {
        vertical-align: middle;
        text-align: center;
    }

    .action-links a {
        margin: 0 8px;
        color: #0d6efd;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .action-links a:hover {
        color: #084cd9;
        text-decoration: underline;
    }

    .create-btn {
        margin-bottom: 15px;
    }
</style>

<div class="table-container">
    <h2 class="mb-4 text-primary text-center">Delivery List</h2>

    <p class="text-end">
        @Html.ActionLink("Create New Delivery", "Create", null, new { @class = "btn btn-primary create-btn" })
    </p>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Order.Status)</th>
                <th>@Html.DisplayNameFor(model => model.DeliveryDate)</th>
                <th>@Html.DisplayNameFor(model => model.DeliveryStatus)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Order.Status)</td>
                    <td>@(item.DeliveryDate?.ToString("yyyy-MM-dd") ?? "")</td>
                    <td>@Html.DisplayFor(modelItem => item.DeliveryStatus)</td>
                    <td class="action-links">
                        @Html.ActionLink("Edit", "Edit", new { id = item.DeliveryId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.DeliveryId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.DeliveryId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
