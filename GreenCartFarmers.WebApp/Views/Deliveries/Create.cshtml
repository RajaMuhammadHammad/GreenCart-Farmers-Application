@model GreenCartFarmers.WebApp.Delivery

@{
    ViewBag.Title = "Create Delivery";
}

<!-- Bootstrap 5 CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- Custom CSS -->
<style>
    .form-container {
        animation: slideInFade 0.6s ease-in-out;
        background: #ffffff;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    @@keyframes slideInFade {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-title {
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 20px;
        color: #198754;
    }

    .form-control:focus {
        box-shadow: 0 0 5px rgba(25, 135, 84, 0.6);
        border-color: #198754;
    }

    .btn-primary {
        background-color: #198754;
        border-color: #198754;
    }

    .btn-primary:hover {
        background-color: #146c43;
    }

    .back-link {
        margin-top: 15px;
        display: inline-block;
    }
</style>

<div class="container mt-5">
    <div class="form-container">
        <h2 class="form-title">📦 Create New Delivery</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="mb-3">
                @Html.LabelFor(model => model.OrderId, "Select Order", htmlAttributes: new { @class = "form-label" })
                @Html.DropDownList("OrderId", null, htmlAttributes: new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.OrderId, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.DeliveryDate, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.DeliveryDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.DeliveryDate, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.DeliveryStatus, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.DeliveryStatus, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DeliveryStatus, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">✅ Create Delivery</button>
        }

        <div class="back-link">
            @Html.ActionLink("🔙 Back to List", "Index", null, new { @class = "btn btn-outline-secondary btn-sm" })
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
