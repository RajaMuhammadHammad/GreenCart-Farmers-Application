@model GreenCartFarmers.WebApp.Review
@{
    ViewBag.Title = "Review Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Header Section -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-star me-2"></i>
                        Review Details
                    </h3>
                </div>

                <div class="card-body">
                    <!-- Product Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-leaf text-success me-2"></i>
                                    Product
                                </label>
                                <div class="info-value fw-bold text-primary">
                                    @Html.DisplayFor(model => model.Product.ProductName)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-user text-info me-2"></i>
                                    Reviewer
                                </label>
                                <div class="info-value">
                                    @Html.DisplayFor(model => model.User.UserName)
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Rating Section -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-star text-warning me-2"></i>
                                    Rating
                                </label>
                                <div class="rating-display">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Model.Rating)
                                        {
                                            <i class="fas fa-star text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star text-muted"></i>
                                        }
                                    }
                                    <span class="ms-2 fw-bold">(@Model.Rating/5)</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-calendar-alt text-secondary me-2"></i>
                                    Date Posted
                                </label>
                                <div class="info-value">
                                    @Html.DisplayFor(model => model.CreatedAt)
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Comment Section -->
                    <div class="mb-4">
                        <label class="info-label">
                            <i class="fas fa-comment-dots text-primary me-2"></i>
                            Review Comment
                        </label>
                        <div class="comment-box">
                            <blockquote class="blockquote mb-0">
                                <p class="mb-0">@Html.DisplayFor(model => model.Comment)</p>
                            </blockquote>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    @Html.ActionLink("Edit Review", "Edit", new { id = Model.ReviewId }, new { @class = "btn btn-outline-primary" })
                </div>
                <div>
                    @Html.ActionLink("Back to Reviews", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .info-item {
        margin-bottom: 1rem;
    }

    .info-label {
        font-weight: 600;
        color: #6c757d;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.25rem;
        display: block;
    }

    .info-value {
        font-size: 1.1rem;
        color: #333;
        padding: 0.5rem 0;
    }

    .rating-display {
        font-size: 1.2rem;
        padding: 0.5rem 0;
    }

    .comment-box {
        background-color: #f8f9fa;
        border-left: 4px solid #28a745;
        padding: 1rem;
        margin-top: 0.5rem;
        border-radius: 0.25rem;
    }

    .comment-box blockquote {
        font-style: italic;
        color: #495057;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
    }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
        padding: 1rem 1.5rem;
    }

    .btn {
        padding: 0.5rem 1.5rem;
        border-radius: 0.25rem;
        font-weight: 500;
        text-decoration: none;
    }

    .btn:hover {
        text-decoration: none;
        transform: translateY(-1px);
        transition: all 0.2s ease;
    }

    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
    }

    @@media (max-width: 768px) {
        .d-flex {
            flex-direction: column;
            gap: 1rem;
        }

        .btn {
            width: 100%;
            text-align: center;
        }
    }
</style>

<!-- Include Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<!-- Include Bootstrap if not already included -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">