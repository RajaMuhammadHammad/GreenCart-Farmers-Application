@model IEnumerable<GreenCartFarmers.WebApp.Product>

@{
    ViewBag.Title = "Products";
}

<!-- Bootstrap 5 CDN (in case it's not already in your layout) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .card-container {
        max-width: 1100px;
        margin: 40px auto;
    }

    .table-hover tbody tr:hover {
        background-color: #f0fdf4;
        transition: background-color 0.3s ease;
    }

    .table thead {
        background-color: #0d6efd;
        color: white;
    }

    .action-links a {
        margin-right: 10px;
    }

    h2 {
        text-align: center;
        margin-top: 30px;
        font-weight: 700;
        color: #0d6efd;
    }

    .create-btn {
        margin-bottom: 15px;
    }

    td, th {
        vertical-align: middle !important;
    }

    .description-cell {
        max-width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>

<h2>All Products</h2>

<div class="card shadow-sm card-container">
    <div class="card-body">
        <div class="d-flex justify-content-end create-btn">
            @Html.ActionLink("➕ Create New", "Create", null, new { @class = "btn btn-primary" })
        </div>

        <table class="table table-bordered table-hover align-middle">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().ProductName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Price)</th>
                    <th>@Html.DisplayNameFor(model => model.First().StockQuantity)</th>
                    <th>@Html.DisplayNameFor(model => model.First().CreatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.First().UpdatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.First().CreatedBy)</th>
                    <th style="width: 18%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                        <td class="description-cell">@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>@Html.DisplayFor(modelItem => item.StockQuantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                        <td class="action-links">
                            @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }, new { @class = "btn btn-sm btn-outline-primary" })
                            @Html.ActionLink("Details", "Details", new { id = item.ProductId }, new { @class = "btn btn-sm btn-outline-info" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.ProductId }, new { @class = "btn btn-sm btn-outline-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
