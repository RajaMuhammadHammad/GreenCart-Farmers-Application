@model GreenCartFarmers.WebApp.Product

@{
    ViewBag.Title = "Delete Product";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h2 class="text-center text-danger mb-4">Delete Product</h2>
        <h5 class="text-center text-warning mb-3">Are you sure you want to delete this product?</h5>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Product Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductName)</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-3">Stock Quantity</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.StockQuantity)</dd>

            <dt class="col-sm-3">Created At</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

            <dt class="col-sm-3">Updated At</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedAt)</dd>

            <dt class="col-sm-3">Created By</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedBy)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="d-flex justify-content-between mt-4">
                <input type="submit" value="🗑️ Delete" class="btn btn-danger px-4" />
                @Html.ActionLink("← Cancel", "Index", null, new { @class = "btn btn-outline-secondary" })
            </div>
        }
    </div>
</div>
